      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "mobile_no": {
      "type": "integer",
      "max": 10,
      "required": true
    },
    "NIC": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 12
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    }
